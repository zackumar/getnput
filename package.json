{
  "name": "getnput",
  "displayName": "getnput",
  "description": "Dreamweaver's Get and Put feature. But on VSCode!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "getnput.put",
        "category": "GetNPut",
        "title": "Put on Remote Server"
      },
      {
        "command": "getnput.refresh",
        "title": "Refresh Remote Server Explorer",
        "category": "GetNPut",
        "icon": "$(refresh)"
      },
      {
        "command": "getnput.get",
        "title": "Get from Remote Server",
        "category": "GetNPut",
        "icon": "$(arrow-down)"
      },
      {
        "command": "getnput.delete",
        "title": "Delete from Remote Server",
        "category": "GetNPut"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "getnput",
          "title": "GetNPut",
          "icon": "$(remote)"
        }
      ]
    },
    "views": {
      "getnput": [
        {
          "type": "tree",
          "id": "sftpExplorer",
          "name": "Remote Explorer",
          "when": "getnput.connected == true"
        },
        {
          "type": "webview",
          "id": "sftpSettings",
          "name": "GetNPut Settings"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "getnput.delete",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "getnput.put",
          "group": "getnput"
        },
        {
          "command": "getnput.get",
          "group": "getnput"
        }
      ],
      "view/title": [
        {
          "command": "getnput.refresh",
          "when": "view == sftpExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "getnput.get",
          "when": "view == sftpExplorer && viewItem == sftpNode",
          "group": "inline"
        },
        {
          "command": "getnput.delete",
          "when": "view == sftpExplorer && viewItem == sftpNode"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/ssh2-sftp-client": "^9.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/codicons": "^0.0.32",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "ssh-config": "^4.2.1",
    "ssh2-sftp-client": "^9.0.4"
  }
}
